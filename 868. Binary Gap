class Solution {
    public int binaryGap(int n) {
        return find(n);
    }
    static int find(int n){
        String s=Integer.toString(n,2);
        int first=0;
        char[] ch=s.toCharArray();
        
        for(int i=0;i<ch.length;i++){
            if(ch[i]=='1'){
                first=i;
                break;
            }
        }
        int l=first;int r=first;int maxlen=0;
        while(r<ch.length){
            if(ch[r]=='1'){
             maxlen = Math.max(maxlen, r - l); 
                  l=r;
            }
            r++;
        }
        return maxlen;
    }
}
