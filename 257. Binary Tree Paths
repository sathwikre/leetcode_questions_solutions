/**
 * Definition for a binary tree node.
 * public class TreeNode {
 *     int val;
 *     TreeNode left;
 *     TreeNode right;
 *     TreeNode() {}
 *     TreeNode(int val) { this.val = val; }
 *     TreeNode(int val, TreeNode left, TreeNode right) {
 *         this.val = val;
 *         this.left = left;
 *         this.right = right;
 *     }
 * }
 */
class Solution {

    public List<String> binaryTreePaths(TreeNode root) {
        return find(root);
    }

    static List<String> find(TreeNode root){
        List<List<TreeNode>> ans = new ArrayList<>();
        List<TreeNode> l = new ArrayList<>();

        if(root == null) return new ArrayList<>();

        l.add(root);
        dfs(l, ans);

        List<String> a = new ArrayList<>();
        for(List<TreeNode> k : ans){
            StringBuilder sb = new StringBuilder();
            for(int i = 0; i < k.size(); i++){
                if(i != k.size() - 1){
                    sb.append(k.get(i).val).append("->");
                } else {
                    sb.append(k.get(i).val);
                }
            }
            a.add(sb.toString());
        }
        return a; 
    }

    static void dfs(List<TreeNode> l, List<List<TreeNode>> ans){
        TreeNode curr = l.get(l.size() - 1);

        if(curr.left == null && curr.right == null){
            ans.add(new ArrayList<>(l)); 
            return;
        }

        if(curr.left != null){
            l.add(curr.left);
            dfs(l, ans);
            l.remove(l.size() - 1); 
        }

        if(curr.right != null){
            l.add(curr.right);
            dfs(l, ans);
            l.remove(l.size() - 1);
        }
    }
}
