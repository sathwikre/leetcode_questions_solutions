class Solution {
    public int maxDepth(String s) {
       return find(s) ;
    }
    static int find(String s){
        int maxcounter=-1;int counter=0;
        for(int i=0;i<s.length();i++){
            if(s.charAt(i)=='('){
                counter++;
            }else if(s.charAt(i)==')'){
                counter--;
            }
            maxcounter=Math.max(maxcounter,counter);
        }
        return maxcounter;
    }
}
