class Solution {
    public int sumOfGoodNumbers(int[] nums, int k) {
        return find(nums, k);
    }

    static int find(int[] nums, int k) {
       int sum = 0;
       int n=nums.length;
        for(int i = 0; i < n; i++){
            if((i-k >= 0 && i+k < n) && nums[i] > nums[i-k] && nums[i] > nums[i+k]){
                sum += nums[i];
            }
            else if((i-k < 0 && i+k >= n)){
                sum += nums[i];
            }
            else if(i-k < 0 && i+k < n && nums[i] > nums[i+k]){
                sum += nums[i];
            }
            else if(i-k >= 0 && i+k >= n && nums[i] > nums[i-k]){
                sum += nums[i];
            }
        }

        return sum;
    }
}
