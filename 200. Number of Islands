class Solution {
    public int numIslands(char[][] grid) {
        return find(grid);
    }
    static int find(char[][] arr){
        boolean[][] vis=new boolean[arr.length][arr[0].length];
        int c=0;
        for(int i=0;i<arr.length;i++){
            for(int j=0;j<arr[0].length;j++){
                if(arr[i][j]=='1'&&!vis[i][j]){
                    c++;
                    dfs(vis,arr,i,j);
                }
            }
        }
        return c;
    }
    static void dfs(boolean[][] vis,char[][] arr,int i,int j){
        vis[i][j]=true;
        int[] left={-1, 1, 0, 0};
        int[] right={0, 0, -1, 1};
        for(int k=0;k<left.length;k++){
            int row=i+left[k];
            int col=j+right[k];
            if(row >= 0 && row < arr.length && col >= 0 && col < arr[0].length&&arr[row][col]=='1'&&!vis[row][col]){
                dfs(vis,arr,row,col);
            }
        }
    }
}
