class Solution {
    public int captureForts(int[] forts) {
        return find(forts);
    }

    static int find(int[] arr) {
        int last = -1;
        int maxlen = 0;

        for (int i = 0; i < arr.length; i++) {
            if (arr[i] != 0) {
                if (last != -1 && arr[i] != arr[last]) {
                    maxlen = Math.max(maxlen, i - last - 1);
                }
                last = i;
            }
        }
        return maxlen;
    }
}
