class Solution {
    public double findMaxAverage(int[] nums, int k) {
        return find(nums,k);
    }
    static double find(int[] arr,int k){
        if(arr.length<k){
            return 0;
        }
        int sum=0;
        int l=0;
        int r=k-1;
        double ans=0;
        for(int i=0;i<k;i++){
            sum+=arr[i];
        }
        ans=(double)sum/k;
        while(r<arr.length-1){
           
                sum=sum-arr[l];
                  r++;
                l++;
                sum+=arr[r];
              
            ans=Math.max(ans,(double)sum/k);
        }
        return ans;
    }
}
