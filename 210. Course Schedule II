import java.util.*;

class Solution {
    public int[] findOrder(int numCourses, int[][] prerequisites) {
        return find(numCourses, prerequisites);
    }

    static int[] find(int n, int[][] arr) {
        List<List<Integer>> adj = new ArrayList<>();
        for (int i = 0; i < n; i++) {
            adj.add(new ArrayList<>());
        }
        for (int i = 0; i < arr.length; i++) {
            int u = arr[i][0]; 
            int v = arr[i][1]; 
            adj.get(v).add(u);
        }

        Stack<Integer> st = new Stack<>();
        boolean[] vis = new boolean[n];
        boolean[] onPath = new boolean[n];
        for (int i = 0; i < n; i++) {
            if (!vis[i]) {
                if (dfsTopo(i, vis, onPath, adj, st)) {
                    return new int[0];
                }
            }
        }

        int[] ans = new int[n];
        int i = 0;
        while (!st.isEmpty()) {
            ans[i++] = st.pop();
        }
        return ans;
    }

    static boolean dfsTopo(int node, boolean[] vis, boolean[] onPath, List<List<Integer>> adj, Stack<Integer> st) {
        vis[node] = true;
        onPath[node] = true;

        for (int nei : adj.get(node)) {
            if (!vis[nei]) {
                if (dfsTopo(nei, vis, onPath, adj, st)) return true;
            } else if (onPath[nei]) {
                return true; 
            }
        }

        onPath[node] = false;
        st.push(node);
        return false;
    }
}
