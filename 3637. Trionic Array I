class Solution {
    public boolean isTrionic(int[] arr) {
        int state=0;
        if(arr.length<4) return false;
        for(int i=0;i<arr.length-1;i++){
            if(state==0){
                if(arr[i]<arr[i+1]){

                }else if(i>0&&arr[i]>arr[i+1]){
                    state=1;
                }else{
                    return false;
                }
            }
            if(state==1){
                if(arr[i]>arr[i+1]){

                }else if(arr[i]<arr[i+1]){
                    state=2;
                }else{
                    return false;
                }
            }
            if(state==2){
                if(arr[i]<arr[i+1]){

                }else{
                    return false;
                }
            }
        }
        return state==2;
    }
}
