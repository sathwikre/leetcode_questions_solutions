class Solution {
    public int minimumCost(int[] cost) {
        Arrays.sort(cost);
        return find(cost);
    }
    static int find(int[] arr){
        int sum=0;
        int paid=0;
        for(int i=arr.length-1;i>=0;i--){
            if(paid==2){
                paid=0;
                continue;
            }
            sum+=arr[i];
            paid++;
          
        }
       return sum;
    }
}
