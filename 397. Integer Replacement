class Solution {
    public int integerReplacement(int n) {
        return find(n);
    }

    static int find(int n) {
        int c = 0;
        long num = n;

        if (num == 1) {
            return 0;
        }

        while (true) {
            if (num % 2 == 0) {
                num = num / 2;
                c++;
            } else {
              
                if (num == 3 || ((num & 2) == 0)) {
                    num = num - 1;
                } else {
                    num = num + 1;
                }
                c++;
            }

            if (num == 1) {
                return c;
            }
        }
    }
}
