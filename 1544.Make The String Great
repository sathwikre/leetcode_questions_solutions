import java.util.Stack;

class Solution {
    public String makeGood(String s) {
        return find(s);
    }
    
    static String find(String s){
        Stack<Character> st = new Stack<>();
        for(char ch : s.toCharArray()){
            if(!st.isEmpty()){
                char c = st.peek();
                if(Character.toUpperCase(c) == Character.toUpperCase(ch) && c != ch){
                    st.pop();
                } else {
                    st.push(ch);
                }
            } else {
                st.push(ch);
            }
        }
        
        StringBuilder sb = new StringBuilder();
        for(char ch : st){
            sb.append(ch);
        }
        return sb.toString();
    }
}
