/**
 * Definition for a binary tree node.
 * public class TreeNode {
 *     int val;
 *     TreeNode left;
 *     TreeNode right;
 *     TreeNode() {}
 *     TreeNode(int val) { this.val = val; }
 *     TreeNode(int val, TreeNode left, TreeNode right) {
 *         this.val = val;
 *         this.left = left;
 *         this.right = right;
 *     }
 * }
 */
class Solution {
    public int maxLevelSum(TreeNode root) {
        return find(root);
    }
    static int find(TreeNode root){
         if (root == null) {
            return -1;
        }
        Queue<TreeNode> q=new LinkedList<>();
        int max=Integer.MIN_VALUE;
        int l=0;
        int c=0;
        q.offer(root);
        while(!q.isEmpty()){
            int s=q.size();
            int sum=0;
            for(int i=0;i<s;i++){
                TreeNode node = q.poll();
                    sum+=node.val;
                if (node.left != null) {
                    q.offer(node.left);
                }
                if (node.right != null) {
                    q.offer(node.right);
                }
            }
           if(sum>max){
            max=sum;
            l=c;
           }
c++;
        }
        return l+1;
    }
}
