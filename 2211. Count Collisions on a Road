class Solution {
    public int countCollisions(String directions) {
        return find(directions);
    }
    static int find(String s){
        int c=0;
        int i=0;
        int j=s.length()-1;

        while(i<=j&&s.charAt(i)=='L'){
            i++;
        }
        
        while(j>=0&&s.charAt(j)=='R'){
            j--;
        }
        for(int k=i;k<=j;k++){
            if(s.charAt(k)=='L'||s.charAt(k)=='R'){
                c++;
            }
        }
        return c;
    }
}
