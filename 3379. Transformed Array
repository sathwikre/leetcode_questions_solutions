class Solution {
    public int[] constructTransformedArray(int[] nums) {
        return find(nums);
    }
    static int[] find(int[] arr){
        int[] ans=new int[arr.length];
        int n=arr.length;
        for(int i=0;i<arr.length;i++){
            if(arr[i]>0){
                ans[i]=arr[(i+arr[i])%arr.length];
            }else if(arr[i]<0){
                ans[i]=arr[((i + arr[i]) % n + n) % n];
            }else if(arr[i]==0){
                ans[i]=0;
            }
        }
        return ans;
    }
}
