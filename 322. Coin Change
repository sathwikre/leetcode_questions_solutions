class Solution {
    public int coinChange(int[] coins, int amount) {
        int[][] dp=new int[coins.length][amount+1];
        for (int[] row : dp) {
    Arrays.fill(row, -1);
}

        int ans = find(coins, amount, coins.length - 1,dp);
        return ans >= 1e9 ? -1 : ans;
    }
    static int find(int[] arr,int amt,int i,int[][] dp){
      if (i == 0) {
    if (amt % arr[0] == 0) return amt / arr[0];
    return (int)1e9;
}
if(dp[i][amt]!=-1)  return dp[i][amt];

       int nottake=0+find(arr,amt,i-1,dp);
      int take = (int)1e9;
      if (arr[i] <= amt){
        take=1+find(arr,amt-arr[i],i,dp);
       }
      return dp[i][amt]=Math.min(take, nottake);
    }
}
