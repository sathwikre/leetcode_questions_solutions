class Solution {
    public int finalValueAfterOperations(String[] operations) {
        return find(operations);
    }
    static int find(String[] arr){
        int x=0;
        for(int i=0;i<arr.length;i++){
            String s=arr[i];
            if(s.equals("X++")){
                x++;
            }else if(s.equals("X--")){
                x--;
            }else if(s.equals("--X")){
                x--;
            }else{
                x++;
            }
        }
        return x;
    }
}
