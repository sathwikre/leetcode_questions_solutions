class Solution {
    public int maxProfit(int[] prices,int fee) {
        int[][] dp=new int[prices.length][2];
        for(int i=0;i<dp.length;i++){
            Arrays.fill(dp[i],-1);
        }
        return find(prices,0,1,dp,fee);
    }
    static int find(int[] arr,int i,int buy,int[][] dp,int fee){
        if(i==arr.length) return 0;
        if(dp[i][buy]!=-1) return dp[i][buy];
        int profit=0;
        if(buy==1){
            profit= Math.max(-arr[i]+find(arr,i+1,0,dp,fee),0+find(arr,i+1,1,dp,fee));
        }else{
            profit=  Math.max(arr[i]-fee+find(arr,i+1,1,dp,fee),0+find(arr,i+1,0,dp,fee));
        }
    return dp[i][buy]=profit;
    }
}
