class Solution {
    public boolean check(int[] nums) {
        return find(nums);
    }
    static boolean find(int[] arr){
        int c=0;
        for(int i=0;i<arr.length-1;i++){
            if(arr[i]>arr[i+1]){
                c++;
            }
        }
        if (arr[arr.length - 1] > arr[0]) {
            c++;
        }
        return c <= 1;
    }
}
