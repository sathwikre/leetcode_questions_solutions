class Solution {
    public int countPartitions(int[] nums) {
       return find(nums) ;
    }
    static int find(int[] arr){
        int sum=0;
        int prev=0;
        for(int i=0;i<arr.length;i++){
            sum+=arr[i];
        }
        int c=0;
        for(int i=0;i<arr.length-1;i++){
            prev+=arr[i];
            sum=sum-arr[i];
            int ans=prev-sum;
            if(ans%2==0){
                c++;
            }
        }
        return c;
    }
}
