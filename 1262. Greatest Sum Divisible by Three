class Solution {
    public int maxSumDivThree(int[] nums) {
        return find(nums);
    }
    static int find(int[] arr){
        int sum=0;
        for(int i=0;i<arr.length;i++){
            sum+=arr[i];
           
        }
         if(isdiv(sum)){
                return sum;
            }
            List<Integer> l1=new ArrayList<>();
             List<Integer> l2=new ArrayList<>();
             for(int i=0;i<arr.length;i++){
                if(arr[i]%3==1){
                    l1.add(arr[i]);
                }
                if(arr[i]%3==2){
                    l2.add(arr[i]);
                }
             }
             Collections.sort(l1);
             Collections.sort(l2);
             int ans=0;
             if(sum%3==1){
                int op1=l1.size()>0?sum-l1.get(0):0;
                int op2=l2.size()>1?sum-(l2.get(0)+l2.get(1)):0;
                ans=Math.max(op1,op2);
             }else{
                int op1=l2.size()>0?sum-l2.get(0):0;
                int op2=l1.size()>1?sum-(l1.get(0)+l1.get(1)):0;
                ans=Math.max(op1,op2);
             }
             return ans;
    }static boolean isdiv(int n){
        return n%3==0;
    }
}
