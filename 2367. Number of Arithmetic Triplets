class Solution {
    public int arithmeticTriplets(int[] nums, int diff) {
        return find(nums,diff);
    }
    static int find(int[] arr,int diff){
           int count=0;
           int n=arr.length-1;
        for(int i=0;i<=n;i++){
            for(int j=0;j<=n;j++){
                for(int k=0;k<=n;k++){
                    if(i<j&&j<k&&arr[j]-arr[i]==diff&&arr[k]-arr[j]==diff){
                        count++;
                    }
                }
            }
        }
        return  count;
    }
}
